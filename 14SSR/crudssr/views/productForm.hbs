<div class="container">

   <form action="/productForm/producto/operar" method="post">
        <input type="hidden" name="_id"  id="_id" value="{{productos._id}}" >
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" value="{{productos.Nombre}}">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input type="text" class="form-control" id="precio" name="precio" value="{{productos.precio}}">
        </div>
        <div class="form-group">
            <label for="costo">Costo</label>
            <input type="text" class="form-control" id="costo" name="costo" value="{{productos.costo}}">
        </div>
        <div class="form-group">
            <label for="minimo">Minimo</label>
            <input type="text" class="form-control" id="minimo" name="minimo" value="{{productos.minimo}}">
        </div>
        <div class="form-group">
            <label for="stock">Stock</label>
            <input type="text" class="form-control" id="stock" name="stock" value="{{productos.stock}}">
        </div>
        <button type="submit" class="btn btn-primary">Aceptar</button>
        <a href="/" class="btn btn-danger">Cancelar</a>
    </from>
</div>